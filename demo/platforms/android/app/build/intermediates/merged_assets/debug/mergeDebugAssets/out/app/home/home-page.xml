<Page class="page"
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">
    
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Testing"></Label>
        
    </ActionBar>

    <GridLayout rows="auto, auto, *" class="form">
        <!-- Add your page content here -->
        <TextField class="input input-rounded" row="0" text="{{ text }}"></TextField>
        <Button row="1" text="Add" tap="addText()"></Button>
    </GridLayout>
</Page>
