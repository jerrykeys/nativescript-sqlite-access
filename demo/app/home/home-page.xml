<Page class="page"
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">
    
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Testing"></Label>
        
    </ActionBar>

    <GridLayout rows="auto, auto, *" class="form p-y-2">
        <!-- Add your page content here -->
       <GridLayout row="0" columns="*, auto" rows="*" class="p-8">
            <TextField col="0" class="input input-rounded" hint="{{ hint }}"  text="{{ text }}"></TextField>
            <Button col="1" text="Add" tap="{{ addText }}" class="btn btn-primary"></Button>
       </GridLayout>

        <ListView items="{{ items }}" class="list-group" row='2' itemTap="{{ remove }}">
            <ListView.itemTemplate>
                <StackLayout class="list-group-item">
                    <Label text="{{ $value._id + '-'+ $value.textu }}" class="list-group-item-text" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>


    </GridLayout>
</Page>
